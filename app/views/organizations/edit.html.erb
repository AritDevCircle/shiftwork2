<div class="container">

    <h1 class="text-center">Edit Organization</h1>

    <div>
        <div class="organizations-form">
            <%= form_with(model: @organization, local: true) do |f| %>
                <div class="row organizations-field">
                    <%= f.label :org_name, :class => @form_label %>
                    <%= f.text_field :org_name, :class => @form_text_fields %>
                </div>

                
                <div class="row organizations-field">
                    <%= f.label :org_address, :class => @form_label %>
                    <%= f.text_field :org_address, :class => @form_text_fields %>
                </div>
                
                <div class="row organizations-field">
                    <%= f.label :org_city, :class => @form_label %>
                    <%= f.text_field :org_city, :class => @form_text_fields %>
                </div>
                
                <div class="row organizations-field">
                    <%= f.label :org_state, :class => @form_label %>
                    <%= f.text_field :org_state, :class => @form_text_fields %>
                </div>

                <div class="row organizations-field">
                    <%= f.label :org_description, :class => @form_label %>
                    <%= f.text_area :org_description, :class => @form_text_fields %>
                </div>

                <div class="row organizations-field">
                    <%= f.submit "Update Organization", :class => @form_submit_button %>
                </div> 
            <% end %>    
        </div>
    </div>
</div>