<div class="container bg-light p-5">
  <h1>Edit Shift</h1>
  <div class="pt-4">
    <%= form_with(model: @shift, html: { autocomplete: "off" }, local: true) do |f| %>
      <div class="form-group row mr-0">
          <%= f.label :shift_role, class: "col-form-label col-12 col-sm-3 col-lg-2" %>
          <%= f.text_field :shift_role, class: "form-control col-12 col-sm-9 col-lg-8" %>
      </div>

      <div class="form-group row mr-0">
          <%= f.label :shift_description, class: "col-form-label col-12 col-sm-3 col-lg-2" %>
          <%= f.text_area :shift_description, class: "form-control col-12 col-sm-9 col-lg-8" %>
      </div>

      <div class="form-group row mr-0">
          <%= f.label :shift_start, class: "col-form-label col-12 col-sm-3 col-lg-2" %>
          <%= f.text_field :shift_start, value: nil, placeholder: "currently #{in_user_timezone(@shift.shift_start)}", class: "datepicker-js-field inline form-control col-12 col-lg-6" %>
      </div>

      <div class="form-group row mr-0">
          <%= f.label :shift_end, class: "col-form-label col-12 col-sm-3 col-lg-2" %>
          <%= f.text_field :shift_end, value: nil, placeholder: "currently #{in_user_timezone(@shift.shift_end)}", class: "form-control datepicker-js-field inline col-12 col-lg-6" %>
      </div>

      <div class="form-group row mr-0">
          <%= f.label :shift_pay, "Shift Pay (US$)" , class: "col-form-label col-12 col-sm-3 col-lg-2" %>
          <%= f.number_field :shift_pay, class: "form-control col-12 col-sm-6 col-lg-3" %>
      </div>
      <div class="form-group row mr-0">
        <%= f.label :shift_open, 'Shift Status', class: "col-form-label col-12 col-sm-3 col-lg-2"  %>
        <%= f.select(:shift_open, options_for_select([['Open', true], ['Filled', false]], { selected: @shift.shift_open }), {prompt: "Select"}, {class: "form-control col-12 col-sm-6 col-lg-3"}) %>
      </div>

      <div class="form-group text-right">
          <%= f.submit "Update Shift", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>